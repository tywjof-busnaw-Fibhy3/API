<!DOCTYPE html>
<html>
<head>
  <title>Facebook API Example</title>
</head>
<body>
  <button onclick="loginAndFetch()">Login and Fetch Data</button>
  
  <div id="output"></div>

  <script>
    // ‡πÇ‡∏´‡∏•‡∏î Facebook SDK
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '3773528312945054',   // üîÅ ‡πÅ‡∏ó‡∏ô‡∏ó‡∏µ‡πà‡∏î‡πâ‡∏ß‡∏¢ App ID ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì
        cookie     : true,
        xfbml      : true,
        version    : 'v23.0'           // ‡πÉ‡∏ä‡πâ version ‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö
      });

      FB.AppEvents.logPageView();   
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "https://connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));

    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô login ‡πÅ‡∏•‡∏∞‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function loginAndFetch() {
      FB.login(function(response) {
        if (response.authResponse) {
          // ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏´‡∏•‡∏±‡∏á login ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à
          FB.api(
            '/me',
            'GET',
            {
              "fields": "id,name,email,favorite_athletes,favorite_teams,inspirational_people,education,gender,picture,posts{message,created_time},likes{name},videos{likes}"
            },
            function(response) {
              console.log(response);
              document.getElementById("output").innerHTML = JSON.stringify(response, null, 2);
            }
          );
        } else {
          alert('User cancelled login or did not fully authorize.');
        }
      }, {
        scope: 'email,user_likes,user_posts,user_videos'
      });
    }
  </script>
</body>
</html>
